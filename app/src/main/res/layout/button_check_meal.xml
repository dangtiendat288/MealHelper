<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:background="@drawable/background_btn_check">

    <ImageView
        android:layout_marginEnd="10dp"
        android:id="@+id/iv_cart"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@drawable/background_iv_cart"
        android:elevation="5dp"
        android:padding="12dp"
        android:src="@drawable/ic_cart"
        app:layout_constraintEnd_toStartOf="@id/tvMeals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/white"
        />

    <TextView
        android:id="@+id/tvMeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingTop="2dp"
        android:paddingEnd="15dp"
        android:text="MEALS"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_cart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvMealsNo"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />

    <TextView
        android:visibility="gone"
        android:id="@+id/tvMealsNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:paddingEnd="15dp"
        android:text="1"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/iv_cart"
        app:layout_constraintTop_toBottomOf="@id/tvMeals" />


</androidx.constraintlayout.widget.ConstraintLayout>