<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="250dp"
    android:layout_margin="5dp">

<!--    <androidx.cardview.widget.CardView-->
<!--        android:id="@+id/cvMeal"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_margin="1dp"-->
<!--        app:cardCornerRadius="20dp">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:id="@+id/ivMeal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="#DFF4F8" />

                    <ImageView
                        android:padding="7dp"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/fabAdd"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/background_iv_add"
                        android:src="@drawable/background_add_icon"
                        app:tint="@color/button_add_ic_tint"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvMeal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="7dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:text="This is delicious!"
                android:textColor="#000"
                android:textSize="15sp"
                android:ellipsize="end"
                android:maxLines="3"/>
        </LinearLayout>
<!--    </androidx.cardview.widget.CardView>-->
</androidx.coordinatorlayout.widget.CoordinatorLayout>